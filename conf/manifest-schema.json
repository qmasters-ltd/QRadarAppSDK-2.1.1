{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "title": "SDK manifest schema 2.0",
  "description": "Schema for application manifest",
  "type": "object",
  "properties": {
    "name": {
      "$ref": "#/definitions/sanitized_string"
    },
    "description": {
      "$ref": "#/definitions/sanitized_string"
    },
    "version": {
      "$ref": "#/definitions/sanitized_app_version"
    },
    "uuid": {
      "$ref": "#/definitions/sanitized_string"
    },
    "node_only": {
      "$ref": "#/definitions/boolean_string"
    },
    "load_flask": {
      "$ref": "#/definitions/boolean_string"
    },
    "image": {
      "$ref": "#/definitions/optional_sanitized_string"
    },
    "resource_bundles": {
      "$ref": "#/definitions/resource_bundles"
    },
    "areas": {
      "$ref": "#/definitions/areas"
    },
    "dashboard_items": {
      "$ref": "#/definitions/dashboard_items"
    },
    "rest_methods": {
      "$ref": "#/definitions/rest_methods"
    },
    "configuration_pages": {
      "$ref": "#/definitions/configuration_pages"
    },
    "gui_actions": {
      "$ref": "#/definitions/gui_actions"
    },
    "page_scripts": {
      "$ref": "#/definitions/page_scripts"
    },
    "metadata_providers": {
      "$ref": "#/definitions/metadata_providers"
    },
    "resources": {
      "$ref": "#/definitions/resources"
    },
    "fragments": {
      "$ref": "#/definitions/fragments"
    },
    "custom_columns": {
      "$ref": "#/definitions/custom_columns"
    },
    "services": {
      "$ref": "#/definitions/services"
    },
    "environment_variables": {
      "$ref": "#/definitions/environment_variables"
    },
    "authentication": {
      "$ref": "#/definitions/authentication"
    },
    "dependencies": {
      "$ref": "#/definitions/dependencies"
    },
    "uninstall_hooks": {
      "$ref": "#/definitions/uninstall_hooks"
    },
    "use_qradar_csrf": {
      "$ref": "#/definitions/boolean_string"
    },
    "single_instance_only": {
      "$ref": "#/definitions/boolean_string"
    },
    "multitenancy_safe": {
      "$ref": "#/definitions/boolean_string"
    },
    "add_app_capability": {
      "$ref": "#/definitions/boolean_string"
    }
  },
  "required": [
    "name",
    "description",
    "version",
    "uuid"
  ],
  "anyOf": [
    {"required": ["load_flask"]},
    {"required": ["areas"]},
    {"required": ["dashboard_items"]},
    {"required": ["rest_methods"]},
    {"required": ["configuration_pages"]},
    {"required": ["gui_actions"]},
    {"required": ["page_scripts"]},
    {"required": ["metadata_providers"]},
    {"required": ["fragments"]},
    {"required": ["custom_columns"]},
    {"required": ["services"]}
  ],
  "definitions": {
    "capability" : {
      "type": "string",
      "pattern": "^[a-zA-Z.]*$",
      "minLength": 1
    },
    "sanitized_string" : {
      "type": "string",
      "pattern": "^[^<>]*$",
      "minLength": 1
    },
    "optional_sanitized_string" : {
      "type": "string",
      "pattern": "^[^<>]*$"
    },
    "sanitized_url" : {
      "type": "string",
      "minLength": 2,
      "pattern": "^/[^<>]*$"
    },
    "sanitized_environment_variables_name" : {
      "type": "string",
      "minLength": 1,
      "pattern": "^[a-zA-Z_][a-zA-Z0-9_]*[^='<>]*$"
    },
    "sanitized_metadata_type" : {
      "type": "string",
      "pattern": "^(ip|userName|ariel:)[^<>]*$"
    },
    "sanitized_services_name" : {
      "type": "string",
      "minLength": 1,
      "pattern": "^(a-z|A-Z|0-9)*[^ ;/?@&=+$,'|():{}\\[\\]^<>]*$"
    },
    "sanitized_app_version" : {
      "type": "string",
      "pattern": "^[^<> ]*$",
      "minLength": 1
    },
    "resource_bundles": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "locale": {
            "$ref": "#/definitions/sanitized_string"
          },
          "bundle": {
            "$ref": "#/definitions/sanitized_string"
          }
        },
        "required": [
          "locale",
          "bundle"
        ]
      }
    },
    "areas": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "id": {
            "$ref": "#/definitions/sanitized_string"
          },
          "text": {
            "$ref": "#/definitions/optional_sanitized_string"
          },
          "description": {
            "$ref": "#/definitions/optional_sanitized_string"
          },
          "url": {
            "$ref": "#/definitions/sanitized_string"
          },
          "named_service": {
            "$ref": "#/definitions/sanitized_string"
          },
          "required_capabilities": {
            "type": "array",
            "items": {
              "$ref": "#/definitions/capability"
            }
          }
        },
        "required": [
          "id",
          "url",
          "text"
        ]
      }
    },
    "dashboard_items": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "text": {
            "$ref": "#/definitions/sanitized_string"
          },
          "description": {
            "$ref": "#/definitions/sanitized_string"
          },
          "rest_method": {
            "$ref": "#/definitions/sanitized_string"
          },
          "required_capabilities": {
            "type": "array",
            "items": {
              "$ref": "#/definitions/capability"
            }
          }
        },
        "required": [
          "text",
          "description",
          "rest_method"
        ]
      }
    },
    "rest_methods": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "name": {
            "$ref": "#/definitions/sanitized_string"
          },
          "url": {
            "$ref": "#/definitions/sanitized_url"
          },
          "named_service": {
            "$ref": "#/definitions/sanitized_string"
          },
          "method": {
            "enum": [
              "GET",
              "HEAD",
              "POST",
              "PUT",
              "DELETE",
              "TRACE",
              "OPTIONS",
              "CONNECT",
              "PATCH"
            ]
          },
          "argument_names": {
            "type": "array",
            "items": {
              "$ref": "#/definitions/optional_sanitized_string"
            }
          },
          "required_capabilities": {
            "type": "array",
            "items": {
              "$ref": "#/definitions/capability"
            }
          }
        },
        "required": [
          "name",
          "method",
          "url"
        ]
      }
    },
    "configuration_pages": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "text": {
            "$ref": "#/definitions/sanitized_string"
          },
          "description": {
            "$ref": "#/definitions/sanitized_string"
          },
          "icon": {
            "type": [
              "string",
              "null"
            ],
            "pattern": "^[^<>]*$"
          },
          "url": {
            "$ref": "#/definitions/sanitized_string"
          },
          "named_service": {
            "$ref": "#/definitions/sanitized_string"
          },
          "location": {"$ref": "#/definitions/configuration_page_location"},
          "required_capabilities": {
            "type": "array",
            "items": {
              "$ref": "#/definitions/capability"
            }
          }
        },
        "required": [
          "text",
          "description",
          "url"
        ]
      }
    },
    "gui_actions": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "id": {
            "$ref": "#/definitions/sanitized_string"
          },
          "text": {
            "$ref": "#/definitions/sanitized_string"
          },
          "description": {
            "$ref": "#/definitions/optional_sanitized_string"
          },
          "icon": {
            "type": [
              "string",
              "null"
            ],
            "pattern": "^[^<>]*$"
          },
          "named_service": {
            "$ref": "#/definitions/sanitized_string"
          },
          "javascript": {
            "type": "string"
          },
          "rest_method": {
            "$ref": "#/definitions/optional_sanitized_string"
          },
          "groups": {
            "type": "array",
            "items": {"$ref": "#/definitions/sanitized_string"}
          },
          "required_capabilities": {
            "type": "array",
            "items": {"$ref": "#/definitions/capability"}
          }
        },
        "required": [
          "id",
          "text",
          "groups"
        ],
        "anyOf": [
          {
            "required": [
              "javascript"
            ]
          },
          {
            "required": [
              "rest_method"
            ]
          }
        ]
      }
    },
    "page_scripts": {
      "type": "array",
      "items": {
        "type": "object",
        "oneOf": [
          {
            "properties": {
              "app_name": {"$ref": "#/definitions/application_name"},
              "page_id": {"$ref": "#/definitions/sanitized_string"},
              "scripts": {"$ref": "#/definitions/scripts_list"},
              "named_service": {
                "$ref": "#/definitions/sanitized_string"
              }
            },
            "required": ["app_name", "page_id", "scripts"]
          },
          {
            "properties": {
              "app_name": {"$ref": "#/definitions/application_name"},
              "page_id": {"$ref": "#/definitions/wildcard"},
              "scripts": {"$ref": "#/definitions/scripts_list"},
              "named_service": {
                "$ref": "#/definitions/sanitized_string"
              }
            },
            "required": ["app_name", "page_id", "scripts"]
          },
          {
            "properties": {
              "app_name": {"$ref": "#/definitions/wildcard"},
              "page_id": {"$ref": "#/definitions/wildcard"},
              "scripts": {"$ref": "#/definitions/scripts_list"},
              "named_service": {
                "$ref": "#/definitions/sanitized_string"
              }
            },
            "required": ["app_name", "page_id", "scripts"]
          }
        ]
      }
    },
    "metadata_providers": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "rest_method": {
            "$ref": "#/definitions/sanitized_string"
          },
          "metadata_type": {
            "$ref": "#/definitions/sanitized_metadata_type"
          }
        },
        "required": [
          "rest_method",
          "metadata_type"
        ]
      }
    },
    "resources": {
      "type": "object",
      "properties": {
        "memory": {
          "type": "integer",
          "minimum": 1
        }
      }
    },
    "fragments": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "app_name": {"$ref": "#/definitions/application_name"},
          "page_id": {"$ref": "#/definitions/sanitized_string"},
          "location": {"$ref": "#/definitions/page_location"},
          "rest_endpoint": {
            "$ref": "#/definitions/sanitized_string"
          },
          "named_service": {
            "$ref": "#/definitions/sanitized_string"
          },
          "required_capabilities": {
            "type": "array",
            "items": {"$ref": "#/definitions/capability"}
          }
        },
        "required": [
          "app_name",
          "page_id",
          "rest_endpoint"
        ]
      }
    },
    "custom_columns": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "label": {
            "$ref": "#/definitions/sanitized_string"
          },
          "width": {
            "type": "integer",
            "minimum": 15,
            "maximum": 1500
          },
          "page_id": {
            "$ref": "#/definitions/sanitized_string"
          },
          "rest_endpoint": {
            "$ref": "#/definitions/sanitized_string"
          },
          "named_service": {
            "$ref": "#/definitions/sanitized_string"
          },
          "required_capabilities": {
            "type": "array",
            "items": {"$ref": "#/definitions/capability"}
          }
        },
        "required": [
          "label",
          "page_id",
          "rest_endpoint"
        ]
      }
    },
    "services": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "name": {
            "$ref": "#/definitions/sanitized_services_name"
          },
          "version": {
            "$ref": "#/definitions/sanitized_string"
          },
          "port": {
            "type": "integer",
            "minimum": 0,
            "maximum":65536
          },
          "command": {
            "$ref": "#/definitions/sanitized_string"
          },
          "endpoints": {
            "type": "array",
            "items": {
              "type" : "object",
              "properties": {
                "name": {
                  "$ref": "#/definitions/sanitized_string"
                },
                "path": {
                  "$ref": "#/definitions/sanitized_string"
                },
                "http_method": {
                  "$ref": "#/definitions/sanitized_string"
                },
                "request_mime_type": {
                  "$ref": "#/definitions/sanitized_string"
                },
                "request_body_type": {
                  "type": "object"
                },
                "parameters": {
                  "type": "array",
                  "items": {
                    "type" : "object",
                    "properties": {
                      "location": {"type": "string", "enum": ["PATH", "QUERY", "BODY"]},
                      "name": {"$ref": "#/definitions/sanitized_string"},
                      "definition": {"$ref": "#/definitions/sanitized_string"}
                    },
                    "required": ["location", "name"]
                  }
                },
                "response": {
                  "type": "object",
                  "properties": {
                    "mime_type": {"$ref": "#/definitions/sanitized_string"},
                    "body_type": {"type": "object"}
                  },
                  "required": ["mime_type"]
                },
                "error_mime_type": {
                  "$ref": "#/definitions/sanitized_string"
                }
              },
              "required": [
                "name",
                "path",
                "http_method"
              ]
            }
          },
          "autorestart": {
            "type": "string",
            "enum": ["true","false","unexpected"]
          },
          "process_name": {
            "$ref": "#/definitions/sanitized_string"
          },
          "numprocs": {
            "type": "integer",
            "minimum": 0
          },
          "directory": {
            "$ref": "#/definitions/sanitized_string"
          },
          "umask": {
            "$ref": "#/definitions/sanitized_string"
          },
          "priority": {
            "type": "integer",
            "minimum": 1
          },
          "autostart": {
            "$ref": "#/definitions/boolean_string"
          },
          "startsecs": {
            "type": "integer",
            "minimum": 0
          },
          "startretries": {
            "type": "integer",
            "minimum": 0
          },
          "exitcodes": {
            "$ref": "#/definitions/sanitized_string"
          },
          "stopsignal": {
            "type": "string",
            "enum": ["TERM","HUP","INT","QUIT","KILL","USR1","USR2"]
          },
          "stopwaitsecs": {
            "type": "integer",
            "minimum": 0
          },
          "user": {
            "$ref": "#/definitions/sanitized_string"
          },
          "redirect_stderr": {
            "$ref": "#/definitions/boolean_string"
          },
          "stdout_logfile": {
            "$ref": "#/definitions/sanitized_string"
          },
          "stdout_logfile_maxbytes": {
            "$ref": "#/definitions/sanitized_string"
          },
          "stdout_logfile_backups": {
            "type": "integer",
            "minimum": 0
          },
          "stdout_capture_maxbytes": {
            "$ref": "#/definitions/sanitized_string"
          },
          "stdout_events_enabled": {
            "$ref": "#/definitions/boolean_string"
          },
          "stderr_logfile": {
            "$ref": "#/definitions/sanitized_string"
          },
          "stderr_logfile_maxbytes": {
            "$ref": "#/definitions/sanitized_string"
          },
          "stderr_logfile_backups": {
            "type": "integer",
            "minimum": 0
          },
          "stderr_capture_maxbytes": {
            "$ref": "#/definitions/sanitized_string"
          },
          "stderr_events_enabled": {
            "$ref": "#/definitions/boolean_string"
          },
          "environment": {
            "$ref": "#/definitions/sanitized_string"
          },
          "serverurl": {
            "$ref": "#/definitions/sanitized_string"
          }
        },
        "required": [
          "name",
          "version"
        ]
      }
    },
    "environment_variables": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "name": {
            "$ref": "#/definitions/sanitized_environment_variables_name"
          },
          "value": {
            "$ref": "#/definitions/sanitized_string"
          }
        },
        "required": [
          "name",
          "value"
        ]
      }
    },
    "authentication": {
      "type": "object",
      "properties": {
        "oauth2": {
          "type": "object",
          "properties": {
            "authorisation_flow": {
              "$ref": "#/definitions/oauth_flow_type"
            },
            "requested_capabilities": {
              "type": "array",
              "items": {
                "$ref": "#/definitions/sanitized_string"
              },
              "minItems": 1
            }
          },
          "required": [
            "requested_capabilities"
          ]
        }
      }
    },
    "uninstall_hooks": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "description": {"$ref": "#/definitions/sanitized_string"},
          "rest_method": {"$ref": "#/definitions/sanitized_string"},
          "last_instance_only": {"$ref": "#/definitions/boolean_string"},
          "documentation_url": {"$ref": "#/definitions/sanitized_string"}
        },
        "required": [
          "description",
          "rest_method"
        ]
      }
    },
    "oauth_flow_type": {
      "type": "string",
      "enum": [
        "AUTHORIZATION_CODE",
        "CLIENT_CREDENTIALS",
        "IMPLICIT",
        "RESOURCE_OWNER_PASSWORD"
      ]
    },
    "boolean_string": {
      "type": "string",
      "enum": ["true", "false"]
    },
    "wildcard": {
      "type": "string",
      "enum": ["*"]
    },
    "page_location": {
      "type": "string",
      "enum": ["header", "footer"]
    },
    "configuration_page_location": {
      "type": "string",
      "enum": [
        "system_configuration", 
        "user_management",
        "forensics",
        "assets",
        "data_sources_events",
        "data_sources_flows",
        "data_sources_custom_actions",
        "data_sources_vulnerability",
        "try_it_out",
        "dynamic_search",
        "remote_networks_and_services_configuration",
        "apps"
      ]
    },
    "scripts_list": {
      "type": "array",
      "items": {
        "$ref": "#/definitions/sanitized_string"
      }
    },
    "application_name": {
      "type": "string",
      "enum": [
        "assetprofile",
        "Assets",
        "EventViewer",
        "Forensics",
        "QRadar",
        "QVM",
        "Reports",
        "SEM",
        "SRM",
        "Surveillance"
      ]
    }
  }
}
